{
	"semi": true,
	"trailingComma": "es5",
	"singleQuote": true,
	"tabWidth": 2,
	"useTabs": true,
	"jsxSingleQuote": true,
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "always",
	"printWidth": 80,
	"endOfLine": "auto",
	"plugins": ["prettier-plugin-tailwindcss"],
	"importOrder": ["^@/(.*)$", "^[./]"],
	"importOrderSeparation": false,
	"importOrderSortSpecifiers": false,
	"overrides": [
		{
			"files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
			"options": {
				"importOrder": ["<THIRD_PARTY_MODULES>", "^@/(.*)$", "^[./]"]
			}
		}
	]
}
